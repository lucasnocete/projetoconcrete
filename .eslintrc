env:
    node: true
    mocha: true

rules:
    brace-style: [2, "1tbs"]
    camelcase: 0
    comma-style: [2, "last"]
    consistent-return: 0
    default-case: 2
    dot-notation: 0
    eqeqeq: 1
    func-style: 0
    indent: [1, 2]
    key-spacing: 0
    quotes: [2, "single", "avoid-escape"]
    new-cap: 0
    no-floating-decimal: 2
    no-inner-declarations: 1
    no-loop-func: 0
    no-multi-spaces: 0
    no-nested-ternary: 2
    no-octal: 0
    no-path-concat: 1
    no-redeclare: 0
    no-return-assign: 0
    no-shadow: 0
    no-trailing-spaces: 0
    no-underscore-dangle: 0
    space-after-function-name: [2, "never"]
    space-after-keywords: [2, "always"]
    space-before-blocks: 2
    wrap-iife: [2, "any"]